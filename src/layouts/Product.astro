---
import Layout from './Layout.astro';

interface ProductData {
  title: string;
  slug: string;
  sku?: string;
  price: number;
  badge?: string;
  image: string;
  inStock?: boolean;
  seoTitle?: string;
  seoDescription?: string;
  features?: string[];
  specs?: {
    color?: string;
    dimensions?: string;
    weight?: string;
    memory?: string;
    battery?: string;
    languages?: string;
    connection?: string;
    warranty?: string;
    [key: string]: string | undefined;
  };
  boxContents?: string[];
  gallery?: string[];
}

interface RelatedItem {
  slug: string;
  title: string;
  price: number;
  image: string;
}

interface Props {
  product: ProductData;
  related?: RelatedItem[];
}

const { product, related = [] } = Astro.props;
const price = new Intl.NumberFormat('ru-RU').format(product.price);
const stockLabel = product.inStock === false ? 'Предзаказ' : 'Купить сейчас';
const galleryFallbackBySlug: Record<string, string[]> = {
  vspomnit: ['/images/products/vspomnit-vse-cutout.png', '/images/products/vspomnit-vse-cutout.png'],
  'plaud-note': ['/images/products/plaud-note-black.webp', '/images/products/plaud-note-silver.webp'],
  'plaud-note-pro': ['/images/products/plaud-note-silver.webp', '/images/products/plaud-note-black.webp'],
  notepin: ['/images/products/plaud-notepin.webp', '/images/products/plaud-notepin.webp']
};
const gallery = (product.gallery && product.gallery.length ? product.gallery : galleryFallbackBySlug[product.slug] ?? [product.image])
  .filter(Boolean);

const memoryBySlug: Record<string, string> = {
  vspomnit: '64 ГБ',
  'plaud-note': '64 ГБ',
  'plaud-note-pro': '128 ГБ',
  notepin: '64 ГБ'
};
const languageBySlug: Record<string, string> = {
  vspomnit: '81 язык включая русский',
  'plaud-note': '81 язык включая русский',
  'plaud-note-pro': '81 язык включая русский',
  notepin: '81 язык включая русский'
};
const autonomyBySlug: Record<string, string> = {
  vspomnit: 'До 32 часов записи / 200 дней ожидания',
  'plaud-note': 'До 30 часов',
  'plaud-note-pro': 'До 40 часов',
  notepin: 'До 20 часов'
};
const formatBySlug: Record<string, string> = {
  vspomnit: 'WAV, MP3, TXT',
  'plaud-note': 'WAV, MP3, TXT',
  'plaud-note-pro': 'WAV, MP3, TXT',
  notepin: 'WAV, MP3, TXT'
};
const specsRows = [
  { label: 'Размеры', value: product.specs?.dimensions },
  { label: 'Вес', value: product.specs?.weight },
  { label: 'Память', value: product.specs?.memory ?? memoryBySlug[product.slug] },
  { label: 'Автономность', value: product.specs?.battery ?? autonomyBySlug[product.slug] },
  { label: 'Языки', value: product.specs?.languages ?? languageBySlug[product.slug] },
  { label: 'Форматы файлов', value: formatBySlug[product.slug] },
  { label: 'Цвет', value: product.specs?.color },
  { label: 'Подключение', value: product.specs?.connection },
  { label: 'Гарантия', value: product.specs?.warranty }
].filter((row) => row.value);
const isVspomnit = product.slug === 'vspomnit';
const heroHighlights = isVspomnit
  ? [
      '81 язык включая русский',
      'До 32 часов записи',
      '64 ГБ памяти',
      'Бесплатный год подписки (экономия 2490 ₽)'
    ]
  : (product.features ?? []);
---
<Layout title={product.seoTitle ?? `${product.title} | CRYPTORO`} description={product.seoDescription ?? ''} withChrome={true} active="catalog">
  <main class={isVspomnit ? 'product-page-vspomnit' : ''}>
    <section class={`product-hero ${isVspomnit ? 'product-hero-vspomnit' : ''}`}>
      <div class={`hero-grid ${isVspomnit ? 'product-page' : ''}`}>
        <div class={`gallery ${isVspomnit ? 'hero-media-col product-gallery' : ''}`}>
          <nav class={`breadcrumbs ${isVspomnit ? 'is-hidden' : ''}`} aria-label="Хлебные крошки">
            <a href="/">Главная</a>
            <span aria-hidden="true">→</span>
            <a href="/catalog">Каталог</a>
            <span aria-hidden="true">→</span>
            <span>{product.title}</span>
          </nav>
          <div class={`main-img ${isVspomnit ? 'hero-media' : ''}`}>
            <!-- Replace <img> with <video> tag when video is ready -->
            <img id="mainImg" src={gallery[0] ?? product.image} alt={`AI-диктофон ${product.title} в фирменном корпусе`} />
          </div>
          <div class="thumbs">
            {gallery.map((image, idx) => (
              <button class={`thumb ${idx === 0 ? 'active' : ''} ${isVspomnit && idx === 1 ? 'thumb-alt' : ''}`} type="button" data-gallery-thumb data-src={image} aria-label={`Фото ${idx + 1}: ${product.title}`}>
                <img src={image} alt={`Фото ${idx + 1} продукта ${product.title}`} />
              </button>
            ))}
          </div>
          {isVspomnit && (
            <div class="gallery-meta">
              <div class="gallery-meta-title">Вспомни всё</div>
              <div class="gallery-meta-sub">Официальный продукт CRYPTORO</div>
            </div>
          )}
        </div>
        <aside class={`product-aside ${isVspomnit ? 'product-aside-sticky product-sidebar' : ''}`}>
          {isVspomnit && (
            <nav class="breadcrumbs" aria-label="Хлебные крошки">
              <a href="/">Главная</a>
              <span aria-hidden="true">→</span>
              <a href="/catalog">Каталог</a>
              <span aria-hidden="true">→</span>
              <span>{product.title}</span>
            </nav>
          )}
          <div class="badges-row">
            {product.badge && <span class="badge">{product.badge}</span>}
          </div>
          <h1 class="prod-name">{product.title}</h1>
          <p class="prod-sub">{isVspomnit ? 'AI-диктофон с ChatGPT' : product.seoDescription}</p>
          {isVspomnit && (
            <div class="rating-row" aria-label="Рейтинг товара">
              <span class="stars">★★★★★</span>
              <span class="rating-num">4.9</span>
              <span class="rating-sep">•</span>
              <a class="rating-reviews" href="#reviews">отзывы покупателей</a>
            </div>
          )}
          <div class="price-main" data-ms-price={product.slug}>{price} ₽</div>
          <div class="stock-pill" data-ms-stock={product.slug}></div>
          {isVspomnit && <p class="price-note">Бесплатный год подписки в комплекте</p>}
          {isVspomnit && (
            <div class="param-chips">
              <span class="param-chip">81 язык</span>
              <span class="param-chip">32 часа записи</span>
              <span class="param-chip">64 ГБ</span>
            </div>
          )}
          <p class="prod-desc">{product.seoDescription}</p>
          <div class="trust-badges">
            <span class="tbadge">Гарантия 1 год</span>
            <span class="tbadge">Доставка по РФ</span>
            <span class="tbadge">Возврат 14 дней</span>
          </div>
          <div class="features-list">
            {heroHighlights.map((item) => (
              <div class="feat-item"><span class="feat-check">✓</span><span>{item}</span></div>
            ))}
          </div>
          <div class="actions-row">
            <button class="buy-btn" id="addBtn" aria-label={`Добавить в корзину ${product.title}`}>Добавить в корзину</button>
            <button class="buy-btn" id="buyBtn" data-ms-buy-btn={product.slug} aria-label={`Купить сейчас ${product.title}`}>{stockLabel}</button>
          </div>
          {!isVspomnit && <a href="/catalog" class="secondary-btn">Смотреть все модели</a>}
        </aside>
      </div>
    </section>

    <section class="tabs-section">
      <div class="tabs-wrap">
        <div class="tab-content active">
          <h3 class="tab-title">Описание</h3>
          <article class="md-body"><slot /></article>
        </div>
        <div class="tab-content active">
          <h3 class="tab-title">Характеристики</h3>
          <table class="specs-table">
            <tbody>
              {specsRows.map((row) => (
                <tr>
                  <td>{row.label}</td>
                  <td>{row.value}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        <div class="tab-content active">
          <h3 class="tab-title">{isVspomnit ? 'Что в коробке' : 'Комплектация'}</h3>
          <ul class="box-list">
            {(product.boxContents ?? []).map((item) => <li>{item}</li>)}
          </ul>
        </div>
      </div>
    </section>
    <div id="reviews"></div>

    {!!related.length && (
      <section class="related-section">
        <div class="related-wrap">
          <h2>Похожие товары</h2>
          <div class="related-grid">
            {related.map((item) => (
              <a class="rcard" href={`/products/${item.slug}`}>
                <img src={item.image} alt={`AI-диктофон ${item.title}`} />
                <div class="rname">{item.title}</div>
                <div class="rprice" data-ms-price={item.slug}>{new Intl.NumberFormat('ru-RU').format(item.price)} ₽</div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}
  </main>

  <div class="lightbox" id="productLightbox" aria-hidden="true">
    <button type="button" class="lightbox-close" id="lightboxClose" aria-label="Закрыть просмотр">×</button>
    <img id="lightboxImg" src={gallery[0] ?? product.image} alt={`Увеличенное фото ${product.title}`} />
  </div>
  <div class="cart-toast" id="cartToast" role="status" aria-live="polite">Товар добавлен в корзину</div>

  <script define:vars={{ cartItem: { id: product.slug, name: product.title, price: product.price, image: product.image, qty: 1 } }} is:inline>
    function showToast() {
      const toast = document.getElementById('cartToast');
      if (!toast) return;
      toast.classList.add('show');
      window.setTimeout(() => toast.classList.remove('show'), 3000);
    }

    function getCartCountSafe() {
      if (window.cryptoroCart && typeof window.cryptoroCart.readItems === 'function') {
        const items = window.cryptoroCart.readItems();
        return items.reduce((sum, item) => sum + Math.max(1, Number(item?.qty) || 1), 0);
      }
      return 0;
    }

    function addToCartItem() {
      if (window.cryptoroCart && typeof window.cryptoroCart.add === 'function') {
        window.cryptoroCart.add(cartItem);
      }
      const nextCount = getCartCountSafe();
      const c = document.querySelector('#cartCount, .cart-n');
      if (c) {
        c.textContent = String(nextCount);
        c.style.display = nextCount > 0 ? 'flex' : 'none';
      }
      window.dispatchEvent(new CustomEvent('cart:updated', { detail: { count: nextCount } }));
      showToast();
      const btn = document.getElementById('buyBtn');
      if (!btn) return;
      const original = btn.textContent;
      btn.textContent = '✓ Добавлено!';
      btn.style.background = '#111';
      setTimeout(() => {
        btn.textContent = original ?? 'Купить сейчас';
        btn.style.background = '#111';
      }, 2000);
    }
    function buyNowItem() {
      addToCartItem();
      window.location.href = '/cart';
    }

    document.addEventListener('DOMContentLoaded', () => {
      const addBtn = document.getElementById('addBtn');
      const buyBtn = document.getElementById('buyBtn');
      if (addBtn) addBtn.addEventListener('click', addToCartItem);
      if (buyBtn) buyBtn.addEventListener('click', buyNowItem);
    });
  </script>

  <script>
    (function () {
      const mainImg = document.getElementById('mainImg');
      const lightbox = document.getElementById('productLightbox');
      const lightboxImg = document.getElementById('lightboxImg');
      const closeBtn = document.getElementById('lightboxClose');
      if (!mainImg || !lightbox || !lightboxImg || !closeBtn) return;

      function openLightbox(src) {
        if (src) lightboxImg.src = src;
        lightbox.style.display = 'flex';
        requestAnimationFrame(() => lightbox.classList.add('visible'));
        lightbox.setAttribute('aria-hidden', 'false');
      }

      function closeLightbox() {
        lightbox.classList.remove('visible');
        lightbox.setAttribute('aria-hidden', 'true');
        window.setTimeout(() => {
          lightbox.style.display = 'none';
        }, 200);
      }

      document.querySelectorAll('[data-gallery-thumb]').forEach((thumb) => {
        thumb.addEventListener('click', () => {
          const src = thumb.getAttribute('data-src');
          if (!src) return;
          mainImg.src = src;
          document.querySelectorAll('[data-gallery-thumb]').forEach((el) => el.classList.remove('active'));
          thumb.classList.add('active');
          openLightbox(src);
        });
      });

      mainImg.addEventListener('click', () => openLightbox(mainImg.src));
      closeBtn.addEventListener('click', closeLightbox);
      lightbox.addEventListener('click', (event) => {
        if (event.target === lightbox) closeLightbox();
      });
      document.addEventListener('keydown', (event) => {
        if (event.key === 'Escape') closeLightbox();
      });
    })();
  </script>

  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'Product',
    name: product.title,
    description: product.seoDescription,
    image: product.image,
    brand: { '@type': 'Brand', name: 'CRYPTORO' },
    offers: {
      '@type': 'Offer',
      priceCurrency: 'RUB',
      price: product.price,
      availability: product.inStock === false ? 'https://schema.org/PreOrder' : 'https://schema.org/InStock'
    }
  })} />
  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
