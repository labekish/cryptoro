---
import TinaAdminApp from '../../components/TinaAdminApp.jsx';
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CRYPTORO Admin</title>
    <style>
      html,
      body {
        margin: 0;
        height: 100%;
        min-height: 100%;
        background: #f3f4f6;
        font-family: Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        overflow: hidden;
      }
      astro-island {
        display: block;
        min-height: 100vh;
        height: 100vh;
      }
      .tina-tailwind,
      [data-tina-root] {
        min-height: 100vh;
        height: 100vh;
        overflow: hidden;
      }
      .tina-tailwind main,
      [data-test='tina-sidebar'] + div,
      [data-test='tina-admin'] main {
        height: 100vh;
        overflow-y: auto !important;
      }
    </style>
  </head>
  <body>
    <TinaAdminApp client:only="react" />
  </body>
</html>
