---
import Layout from '../../layouts/Layout.astro';
import TinaAdminApp from '../../components/TinaAdminApp.jsx';
---

<Layout title="CRYPTORO Admin" description="Управление контентом CRYPTORO" includeNetlifyIdentity={false}>
  <main style="min-height:100vh;padding:24px;max-width:1320px;margin:0 auto;">
    <h1 style="font-size:42px;font-weight:800;line-height:1.1;margin:0 0 10px;">CRYPTORO Admin</h1>
    <p style="margin:0 0 18px;color:#4b5563;font-size:16px;">Управление каталогом, отзывами и страницами через TinaCMS.</p>
    <div style="border:1px solid #e5e7eb;border-radius:12px;background:#fff;overflow:hidden;">
      <TinaAdminApp client:only="react" />
    </div>
  </main>
</Layout>
