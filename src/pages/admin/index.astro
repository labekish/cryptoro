---
import Layout from '../../layouts/Layout.astro';
import TinaAdminApp from '../../components/TinaAdminApp.jsx';
---

<Layout title="CRYPTORO Admin" description="Tina CMS admin" includeNetlifyIdentity={false}>
  <main style="min-height:100vh;padding:24px;max-width:1200px;margin:0 auto;">
    <h1 style="font-size:28px;font-weight:700;margin:0 0 8px;">CRYPTORO Admin</h1>
    <p style="margin:0 0 16px;color:#4b5563;">Управление контентом каталога, отзывов и страниц через Tina Cloud.</p>
    <div style="border:1px solid #e5e7eb;border-radius:12px;padding:8px;background:#fff;">
      <TinaAdminApp client:only="react" />
    </div>
  </main>
</Layout>
