---
import Layout from '../layouts/Layout.astro';
import { loadLegacyPage } from '../lib/legacy';

const page = loadLegacyPage('index.html');
const consultEndpoint = import.meta.env.PUBLIC_CONSULT_ENDPOINT ?? '';
---
<Layout title={page.title} description={page.description} globalCss={page.css} headScripts={page.headScripts} withChrome={false}>
  <script slot="head" define:vars={{ consultEndpoint }} is:inline>
    window.CRYPTORO_CONSULT_ENDPOINT = consultEndpoint;
  </script>
  <Fragment set:html={page.body} />
</Layout>
